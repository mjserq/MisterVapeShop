<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >

            <stroke android:width="1dip" android:color="#1616FF" />
            <gradient android:angle="-90" android:startColor="#1616FF" android:endColor="#689a92"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >

            <stroke android:width="1dip" android:color="#1616FF" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#1616FF" />
            <gradient android:angle="-90" android:startColor="#1616FF" android:endColor="#1616FF" />
        </shape>
    </item>
</selector>