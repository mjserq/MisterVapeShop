<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >

            <stroke android:width="10dp" android:color="@color/black" />
            <gradient android:angle="-90" android:startColor="#F0FFFF" android:endColor="#F0FFFF"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >

            <stroke android:width="10dp" android:color="#F0FFFF" />
            <solid android:color="#F0FFFF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >

            <stroke android:width="0dp" android:color="@color/black" />
            <gradient android:angle="-90" android:startColor="#F0FFFF" android:endColor="#F0FFFF" />
        </shape>
    </item>
</selector>